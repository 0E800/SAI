<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPureWhite</item>
        <item name="colorPrimaryDark">@color/colorPureWhite</item>
        <item name="colorAccent">@color/colorCoolBlue</item>
        <item name="android:windowBackground">@color/colorPureWhite</item>
        <item name="titleTextColor">@color/colorFineGrey</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorGreaterGrey</item>
        <item name="colorPrimaryDark">@color/colorGreaterGrey</item>
        <item name="colorAccent">@color/colorPerfectPink</item>
        <item name="android:windowBackground">@color/colorGreaterGrey</item>
        <item name="titleTextColor">@color/colorAlmostWhite</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppTheme.Dark</item>
    </style>

    <style name="SAIButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SAICoolbarImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">?attr/colorAccent</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="AlertDialog.AppTheme.Light" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_rounded_alert_dialog</item>
        <item name="android:backgroundTint">@color/colorPureWhite</item>
    </style>

    <style name="AlertDialog.AppTheme.Dark" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_rounded_alert_dialog</item>
        <item name="android:backgroundTint">@color/colorGreaterGrey</item>
        <item name="android:textColorPrimary">@color/colorAlmostWhite</item>
        <item name="android:textColorSecondary">@color/colorAlmostWhite</item>
    </style>

</resources>
